{
    "name": "mdkholy/github-api-utils",
    "type": "library",
    "description": "A set of libraries that focus on Github API authentication, token switching and static repository analysis",
    "homepage": "https://github.com/mdkholy/github-api-utils",
    "keywords": ["github", "gh", "api", "utils"],
    "license": "MIT",
    "authors": [
    	{
    		"name": "Mohamed Elkholy",
    		"email": "mkh117@gmail.com"
    	}
    ],
    "require": {
        "php": "^5.5 || ^7.0",
        "psr/log": "^1.0",
        "php-http/httplug": "^1.1",
        "php-http/discovery": "^1.0",
        "php-http/client-common": "^1.3",
        "knplabs/github-api": "dev-master"
    },
    "require-dev": {
        "symfony/dom-crawler": "^3.1",
        "symfony/css-selector": "^3.1",
        "php-http/guzzle6-adapter": "^1.0",
        "guzzlehttp/psr7": "^1.2"
    },
    "suggest": {
        "symfony/dom-crawler": "Used by Github Inspector class",
        "symfony/css-selector": "Used by Github Inspector class"
    },
    "autoload": {
        "psr-4": {
        	"Github\\Utils\\": "src/"
    	}
    }
}
