{
    "name": "mohatt/github-api-utils",
    "type": "library",
    "description": "Utility library for Github API authentication, token switching and static repository analysis",
    "homepage": "https://github.com/mohatt/github-api-utils",
    "keywords": ["github", "gh", "api", "utils"],
    "license": "MIT",
    "authors": [
    	{
    		"name": "Mohamed Elkholy",
    		"email": "mohatt@pm.me"
    	}
    ],
    "require": {
        "php": "^7.3",
        "psr/log": "^1.0",
        "php-http/httplug": "^1.1",
        "php-http/discovery": "^1.0",
        "php-http/client-common": "^1.6",
        "knplabs/github-api": "^2.11"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.5 || ^6.0",
        "symfony/dom-crawler": "^3.1",
        "symfony/css-selector": "^3.1",
        "php-http/guzzle6-adapter": "^1.0",
        "php-http/mock-client": "^1.0",
        "guzzlehttp/psr7": "^1.2"
    },
    "suggest": {
        "symfony/dom-crawler": "Used by Github Inspector class",
        "symfony/css-selector": "Used by Github Inspector class"
    },
    "autoload": {
        "psr-4": {
        	"Github\\Utils\\": "src/"
    	}
    },
    "autoload-dev": {
        "psr-4": {
            "Github\\Utils\\Tests\\": "test/"
        }
    }
}
